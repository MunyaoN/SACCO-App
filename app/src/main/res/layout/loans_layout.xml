<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvLoanNo"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/aldrich"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvApplDate"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginStart="40dp"
        android:fontFamily="@font/aldrich"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/tvLoanNo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvLoanName"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/aldrich"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvApplDate"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvApplAmt"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/aldrich"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/tvLoanName"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvInstallment"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginStart="40dp"
        android:fontFamily="@font/aldrich"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/tvApplAmt"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvInterest"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/aldrich"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvInstallment"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDisbursDate"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/aldrich"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvInterest"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvOutBal"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/aldrich"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvDisbursDate"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>